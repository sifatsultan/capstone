<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_roationKnob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="controll"
        android:padding="0dp"
        android:src="@drawable/control" />

    <EditText
        android:id="@+id/et_enterIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.0.1" />

    <Button
        android:id="@+id/btn_Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et_enterIp"
        android:text="Connect" />

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/b7"
        android:textSize="20sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/tv_roationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="0dp"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_rotationValueScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_ipAddressSameNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <!-- Debugging Monitor -->

    <TextView
        android:id="@+id/tv_debugImageViewSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_debugScreenSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_debugImageViewSize"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_debugScreenCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_debugScreenSize"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_debugImageViewCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_debugScreenCenter"
        android:textColor="@android:color/white" />

</RelativeLayout>